<form 
  id="editorForm" 
  hx-on="htmx:configRequest: event.detail.headers=''; event.detail.headers['Content-Type']='application/x-www-form-urlencoded;charset=UTF-8'"
  hx-get="http://127.0.0.1:3000/editor/modify/{{document.id}}" hx-target="#editor">
  <p class="formitem"><span>表单名称：<span><input type="text" name="title" value="{{document.title}}" /></p>
  <p class="formitem"><span>表单内容：</span><textarea name="text">{{document.text}}</textarea></p>
  <p class="formitem submit"><button type="submit">修改</button></p>
</form>

{{#if isUpdate}}
  {{> menu documents=documents isUpdate=isUpdate}}
{{/if}}